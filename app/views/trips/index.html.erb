<div class="page-header">
  <h1>Where Are You Off To?</h1>
</div>

<%= link_to "New Trip", new_trip_path, class: "btn btn-primary" %>

<% @trips.each do |trip| %>
<div class="trip">
  <strong><%= trip.destination %></strong>
  <p><%= trip.duration %></p>
  <div class="meta">
    <%= link_to time_ago_in_words(trip.created_at) + " ago", trip %>
    <span class="admin">
      | <%= link_to "Edit", edit_trip_path(trip) %> |
      <%= link_to "Delete", trip, method: :delete, data: {confirm: "Are you sure you want to delete this post?"} %>
  </div>
</div>
<% end %>
